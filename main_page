    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="toogle.css">
    <style>
        /* Fixed position for the time display */
        #timeDisplay {
            position: fixed;
            top: 20px;
            right: 20px;
            background-color: rgba(0, 0, 0, 0.7);
            color: white;
            padding: 10px;
            border-radius: 5px;
            z-index: 1000; /* Ensure it stays on top */
        }
    </style>
